<div class="post-list">

  <form id="new-post-form" action="/posts" method="post">
    <input id="message-input" type="text" placeholder="What's on your mind?" />
    <input type="submit" value="Post" />
  </form>

  {{#each posts}}

    <div class="post-container card" id="{{this._id}}">

      <div class="post-header">
        <span class="name">NAME</span>
        <span class="date-posted">DATE TIME</span>
      </div>

      <div class="post-body">
        <p class="message">
          {{this.message}}
        </p>
      </div>

    </div>
  {{/each}}

</div>
<a class="new-post-link" href="/posts/new">New post</a>